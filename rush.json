{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json",

  "rushVersion": "5.68.0",
  "pnpmVersion": "6.32.11",

  "pnpmOptions": {
    "strictPeerDependencies": true,
    "preventManualShrinkwrapChanges": true,
    "useWorkspaces": true
  },

  "nodeSupportedVersionRange": ">=14.19.0",

  "projectFolderMinDepth": 1,
  "projectFolderMaxDepth": 2,

  "repository": {
     "url": "https://github.com/dbartholomae/startup-cto-blog",
     "defaultBranch": "main"
  },

  "projects": [
    {
      "packageName": "blog",
      "projectFolder": "blog"
    },
    {
      "packageName": "analytics",
      "projectFolder": "analytics"
    },
    {
      "packageName": "access",
      "projectFolder": "access"
    },
    {
      "packageName": "validation",
      "projectFolder": "util/validation"
    }
  ]
}
